<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextCreateUser">
        <item name="android:textColor">#686868</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="TextViewHistoryLabel">
        <item name="android:textColor">@color/gray_label</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewHistoryValue">
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
