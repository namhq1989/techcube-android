<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="success"
            type="boolean" />

        <variable
            name="message"
            type="String" />

        <variable
            name="content"
            type="String" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/background_create_user_input"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@{success ? @color/green : @color/red}"
                android:scaleType="centerInside"
                android:src="@{success ?  @drawable/ic_success : @drawable/ic_failure}"
                app:layout_constraintDimensionRatio="2.1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@{message}"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header" />


            <TextView
                android:id="@+id/tvContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="3dp"
                android:maxLines="10"
                android:minLines="4"
                android:scrollbars="vertical"
                android:text="@{content}"
                android:textColor="@color/darkerGray"
                android:textSize="12sp"
                app:gone="@{content == null}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvMessage" />

            <View
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:layout_marginRight="4dp"
                android:background="@color/colorPrimary"
                app:gone="@{content == null}"
                app:layout_constraintBottom_toBottomOf="@+id/tvContent"
                app:layout_constraintEnd_toStartOf="@+id/tvContent"
                app:layout_constraintTop_toTopOf="@+id/tvContent" />

            <Button
                android:id="@+id/btBack"
                android:layout_width="137dp"
                android:layout_height="36dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_button_red"
                android:text="@string/scan_result_back"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvContent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>


</layout>